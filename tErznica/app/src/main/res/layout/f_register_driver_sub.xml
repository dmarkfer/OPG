<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/log_in_width"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="@dimen/log_in_width"
        android:layout_height="wrap_content"
        style="@style/WelcomeEditText"
        android:id="@+id/f_register_driver_sub_description"
        android:hint="@string/description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/f_register_driver_sub_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/f_register_driver_sub_add_l">

        <ImageView
            android:layout_width="@dimen/row_height"
            android:layout_height="@dimen/row_height"
            android:id="@+id/f_register_driver_sub_add"
            android:background="@mipmap/add_white"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/white"
            android:text="@string/add_a_vehicle"
            android:padding="8dp"/>

    </LinearLayout>

</LinearLayout>