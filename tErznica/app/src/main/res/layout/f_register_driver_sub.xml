<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/log_in_width"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="@dimen/log_in_width"
        android:layout_height="wrap_content"
        style="@style/WelcomeEditText"
        android:id="@+id/f_register_driver_sub_description"
        android:hint="@string/description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/f_register_driver_sub_list"/>

    <ImageView
        android:layout_width="@dimen/row_height"
        android:layout_height="@dimen/row_height"
        android:id="@+id/f_register_driver_sub_add"
        android:background="@mipmap/add_white"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>