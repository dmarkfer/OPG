<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/data_entry_description"
        android:gravity="center"
        android:textSize="@dimen/font_large"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingTop="50dp"/>

    <EditText
        android:layout_width="@dimen/log_in_width"
        android:layout_height="@dimen/edit_text_height"
        android:theme="@style/WelcomeEditText"
        android:id="@+id/f_register_general_name"
        android:inputType="textCapWords"
        android:hint="@string/name"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="@dimen/log_in_width"
        android:layout_height="@dimen/edit_text_height"
        android:theme="@style/WelcomeEditText"
        android:id="@+id/f_register_general_surname"
        android:inputType="textCapWords"
        android:hint="@string/surname"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="@dimen/log_in_width"
        android:layout_height="@dimen/edit_text_height"
        android:theme="@style/WelcomeEditText"
        android:id="@+id/f_register_general_mail"
        android:inputType="textEmailAddress"
        android:hint="@string/mail_address"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="@dimen/log_in_width"
        android:layout_height="@dimen/edit_text_height"
        android:theme="@style/WelcomeEditText"
        android:id="@+id/f_register_general_phone"
        android:inputType="phone"
        android:hint="@string/phone_number"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="@dimen/log_in_width"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="1"
            android:theme="@style/WelcomePassword"
            android:hint="@string/password"
            android:id="@+id/f_register_general_password"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="@dimen/edit_text_height"
            android:layout_height="@dimen/edit_text_height"
            android:id="@+id/f_register_general_password_img"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/log_in_width"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="1"
            android:theme="@style/WelcomePassword"
            android:hint="@string/confirm_password"
            android:id="@+id/f_register_general_confirm"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="@dimen/edit_text_height"
            android:layout_height="@dimen/edit_text_height"
            android:id="@+id/f_register_general_confirm_img"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/log_in_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back"
            style="@style/BlueButton"
            android:id="@+id/f_register_general_back"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/next"
            style="@style/WhiteButton"
            android:id="@+id/f_register_general_next"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>